@page
@model ForgotPasswordConfirmation
@{
    Layout = "_LayoutLogin";
}


<div style="position: absolute; margin: auto; top: 0; right: 0;  bottom: 0;  left: 0;  width: 800px;  height: 300px;">
    <div class="notification-screen">
        <div class="login-box">
            <div style="margin-left:5px; margin-right:5px;">
            <br/>
            <br/>
            <hr/>
            <p> If your account is found in the system, you will receive an email with more instructions on how to reset your password.</p>
            <hr/>
            <a asp-action="index" asp-asp-controller="home" class="btn btn-primary">Back to Login</a>
            </div>
        </div>
    </div>
</div>
